            #else:
                <h3>文件</h3>
                #if(transfer.isImage):
                    <a href="#(transfer.content)" target="_blank">
                        <p>#(transfer.name)</p>
                        <img src="#(transfer.content)" width="300"/>
                    </a>
                #else:
                    <a href="#(transfer.content)">#(transfer.content)</a>
                #endif
            #endif
            </br>
        #endfor
